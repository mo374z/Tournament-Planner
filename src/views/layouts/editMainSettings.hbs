<div style="text-align: center;" style="width: 100px; margin: 0 auto;">

    <div class="page-divider">
        <h4>Spielplan</h4>
            <a href="/schedule/generate" class="btn btn-danger" role="button"
            onclick="return confirm('Bist du sicher, dass du einen neuen Spielplan generieren möchtest? (Davor am besten alle Zähler löschen !)');">Neuen Spielplan generieren</a>
    </div>

    <div class="page-divider">
        <h4>Tournament Settings</h4>
        <form action="/mainSettings" method="POST" autocomplete="off" style="width: 300px; margin: 0 auto;">
            <label for="scheduleTemplate">Schedule Template:</label><br>
            <select id="scheduleTemplate" name="scheduleTemplate" required style="width: 100%; padding: 5px; margin-bottom: 10px;">
                <option value="4groups_4teams.yaml" {{#if (eqref mainSettings.scheduleTemplate "4groups_4teams.yaml")}}selected{{/if}}>4 vs 4</option>
            </select><br>
            <label for="TornamentStartTime">Tournament Start Time:</label><br>
            <input type="datetime-local" id="TornamentStartTime" name="TornamentStartTime"
                value="{{#if mainSettings.TornamentStartTime}}{{ formatDateTime mainSettings.TornamentStartTime }}{{/if}}"
                required style="width: 100%; padding: 5px; margin-bottom: 10px;"><br>

            <label for="timeBetweenGames">Time Between Games (minutes):</label><br>
            <input type="number" id="timeBetweenGames" name="timeBetweenGamesInMin"
                value="{{ milliToMin mainSettings.timeBetweenGames }}" required
                style="width: 100%; padding: 5px; margin-bottom: 10px;"><br>

            <label for="gameDurationGroupStage">Game Duration - Group Stage (minutes):</label><br>
            <input type="number" id="gameDurationGroupStage" name="gameDurationGroupStageInMin"
                value="{{ milliToMin mainSettings.gameDurationGroupStage }}" required
                style="width: 100%; padding: 5px; margin-bottom: 10px;"><br>

            <label for="gameDurationQuarterfinals">Game Duration - Quarterfinals (minutes):</label><br>
            <input type="number" id="gameDurationQuarterfinals" name="gameDurationQuarterfinalsInMin"
                value="{{ milliToMin mainSettings.gameDurationQuarterfinals }}" required
                style="width: 100%; padding: 5px; margin-bottom: 10px;"><br>

            <label for="gameDurationSemifinals">Game Duration - Semifinals (minutes):</label><br>
            <input type="number" id="gameDurationSemifinals" name="gameDurationSemifinalsInMin"
                value="{{ milliToMin mainSettings.gameDurationSemifinals }}" required
                style="width: 100%; padding: 5px; margin-bottom: 10px;"><br>

            <label for="gameDurationFinal">Game Duration - Final (minutes):</label><br>
            <input type="number" id="gameDurationFinal" name="gameDurationFinalInMin"
                value="{{ milliToMin mainSettings.gameDurationFinal }}" required
                style="width: 100%; padding: 5px; margin-bottom: 10px;"><br>

            <label for="timeBetweenGamePhases">Time Between Game Phases (minutes):</label><br>
            <input type="number" id="timeBetweenGamePhases" name="timeBetweenGamePhasesInMin"
                value="{{ milliToMin mainSettings.timeBetweenGamePhases }}" required
                style="width: 100%; padding: 5px; margin-bottom: 10px;"><br>

            <label for="goalsforSekt">Nr. Goals for Flasche Sekt:</label><br>
            <input type="number" id="goalsforSekt" name="goalsforSekt" value="{{ mainSettings.goalsforSekt }}" required
                style="width: 100%; padding: 5px; margin-bottom: 10px;"><br>

            <div>
                <button id="saveSettings" type="submit" class="btn btn-primary">Save Tournament Settings</button>
            </div>
        </form>
    </div>

    <div class="page-divider">
        <h2>Gruppen verwalten</h2>
        <form action="/mainSettings/addGroup" method="POST" style="width: 300px; margin: 0 auto;">
            <div class="form-group">
                <label for="groupName">Neue Gruppe hinzufügen:</label>
                <input type="text" class="form-control" id="groupName" name="groupName" required>
            </div>
            <button type="submit" class="btn btn-primary">Gruppe hinzufügen</button>
        </form>
        <br>
        <h4>Bestehende Gruppen:</h4>
        <div style="text-align: center;">
            {{#each mainSettings.groups}}
            <div>
                <strong>{{this}}</strong>
                <form action="/mainSettings/deleteGroup" method="POST" style="display:inline;"
                    onsubmit="return confirm('Achtung ! Gruppe nur löschen wenn keine Manschaften bzw. atueller Spielplan mit der Gruppe generiert ist ! Willst du wirklich löschen?');">
                    <input type="hidden" name="groupName" value="{{this}}">
                    <button type="submit" class="btn btn-danger btn-sm">Löschen</button>
                </form>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="page-divider">
        <h4>General Counters</h4>
        <p>All Goals: {{ generalCounters.allGoals }}</p>
        <p>Games Played: {{ generalCounters.gamesPlayed }}</p>
        <p>Goal Sekt Counter: {{ generalCounters.goalSektCounter }}</p>
        <p>Gewonnene Sektflaschen: {{ generalCounters.wonSektBottles }}</p>

        <!-- Add the button to reset counters -->
        <a href="mainSettings/resetCounters" class="btn btn-danger"
            onclick="return confirm('Willst du wirklich alle Zähler löschen ?');" style="margin-bottom: 1em">Clear
            General Counters</a>
        <br>
        <a href="/team/clearTeamCounters" onclick="return confirm('Are you sure you want to clear all team counters?');"
            class="btn btn-danger" role="button" style="margin-bottom: 1em">Clear Counters in all Teams </a>
        <br>
        <a href="#" onclick="resetPlayers()" class="btn btn-danger" role="button" style="margin-bottom: 1em">Clear
            Counters and Goals from all Players</a>
    </div>

    <div class="page-divider">
        <h4>Users</h4>
        <a href="user/register" class="btn btn-secondary" style="margin-bottom: 1em;">Register New User</a> <br>
        <a href="user/list" class="btn btn-secondary" style="margin-bottom: 1em;">List Users</a> <br>
        <a href="user/deleteAdmin" class="btn btn-secondary" style="margin-bottom: 1em;">Admin (admin) user löschen</a>
        <br>
    </div>

    <div class="page-divider">
        <h4>Database Settings</h4>
        <p><strong><span style="color: red;">Current DB: "{{dbName}}"</span></strong></p>

        <h5>Available Databases:</h5>
        <table class="mx-auto" style="margin-left: auto; margin-right: auto;">
            <thead>
                <tr>
                    <th>Index</th>
                    <th>Database Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each dbs}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.name}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <br></br>

        <form action="/mainSettings/createDb" method="post">
            <label for="dbName"><strong>Name for the new database:</strong></label><br>
            <input type="text" id="dbName" name="dbName" pattern="^[^\s]+$" required autocomplete="off" maxlength="20"
                style="margin-bottom: 10px;"><br> <!-- pattern="^[^\s]+$" - no spaces allowed-->
            <input type="submit" class="btn btn-primary" value="Create new database" style="margin-bottom: 20px;"
                onclick="return confirm('Are you sure you want to create a new database? \n Ein Benutzer wird angelegt admin, admin')">
        </form>

        <form action="/mainSettings/switchDb" method="post">
            <label for="dbName"><strong>Switch database:</strong></label><br>
            <select id="dbName" name="dbName" required style="margin-bottom: 10px;">
                {{#each dbs}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
            <br>
            <input type="submit" value="Switch database" class="btn btn-primary" style="margin-bottom: 20px;"
                onclick="return confirm('Are you sure you want to switch the database?\nEs kann nur zu einer DB gewechselt werden, die entsprechende collections enthält!')">
        </form>

        <h5>Backup/Restore Database:</h5>

        <a href="/mainSettings/backupDB" class="btn btn-dark">Erstelle Backup der aktuellen DB</a>

        <form action="/mainSettings/restoreDB" method="post">
            <label for="dbRestoreName"><strong>Backups wiederherstellen:</strong></label><br>
            <select id="dbRestoreName" name="dbRestoreName" required style="margin-bottom: 10px;">
                {{#each backupDbs}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
            <br>
            <input type="submit" value="Restore database" class="btn btn-primary" style="margin-bottom: 20px;"
                onclick="return confirm('Are you sure you want to restore the database?')">
        </form>


    </div>
</div>

<script>
    function resetPlayers() {
        if (confirm('Sind Sie sicher, dass Sie alle Tore der Spieler zurücksetzen möchten?')) {
            fetch('/player/reset-total-goals', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Fehler beim Zurücksetzen...');
                }
            });
        }
    }
</script>