<body>
    <div class="container-fluid">
        <div class="container mt-5 mb-5 text-center">
            <h1>Budeturnier 2025</h1>
        </div>
    </div>

    <section class="text-center mt-2 mb-2" {{#unless publicPageOptions.showAdvertisingPosters}}style="display: none;"{{/unless}}>
    <div class="row">
        <div class="col-12 col-md-6 mb-3">
            <img src="/images/Werbung1.jpg" class="img-fluid " alt="Werbung1">
        </div>
        <div class="col-12 col-md-6 mb-3">
            <img src="/images/Werbung2.jpg" class="img-fluid h-100" alt="Werbung2" style="object-fit: cover;">
        </div>
    </div>
    </section>

 
        <!-- Ranking Table Section -->
    {{#if publicPageOptions.showRankingTable}}
    <div class="page-divider">
        <section class="text-center mt-2 mb-2">
            <h1 class="mb-2">Rangliste</h1>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Platz</th>
                            <th scope="col">Team</th>
                            <th scope="col">T</th>
                            <th scope="col">TD</th>
                            <th scope="col">Pkt</th>
                            <th scope="col">Sekt</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each rankedTeams}}
                        <tr>
                            <td>{{index}}</td>
                            <td>{{this.name}}</td>
                            <td><strong>{{this.goals.[0]}}</strong>:{{this.goals.[1]}}</td>
                            <td>{{this.goalDifference}}</td>
                            <td>{{this.points_General}}</td>
                            <td>{{this.sektWon}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </section>
    </div>
    {{/if}}
    

    <!-- Groups Section -->
    <div class="page-divider">
    <section class="text-center mt-2 mb-2">
        <h1 class="mb-2">Tabelle</h1>

        {{#each teamsByGroup}}
            <h2 class="h4 mb-3">Gruppe {{groupName}}</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="thead-light">
                         <tr>
                                <th scope="col">Platz</th>
                                <th scope="col">Team</th>
                                <th scope="col">Sp</th>
                                <th scope="col">T</th>
                                <th scope="col">TD</th>
                                <th scope="col">Pkt</th>
                            </tr>
                    </thead>
                    <tbody>
                        {{#each teams}}
                            <tr>
                                <td>{{this.rank}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.gamesPlayed}}</td>
                                <td>{{this.goalsGroupStage.[0]}}:{{this.goalsGroupStage.[1]}}</td>
                                <td>{{this.goalsDifferenceGroupStage}}</td>
                                <td>{{this.points_General}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{/each}}
        <p class="small">Disclaimer: Das Ranking basiert auf den folgenden Kriterien: 1) Punkte; 2) Tordifferenz; 3) Tore</p>
    </section>
    </div>



    <!-- Schedule List Section -->
    <div class="page-divider">
    <section style="text-align: center;">

        <h1>Spielplan</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                        <tr>
                            <th>Nr.</th>
                            <th>Beginn</th>
                            <th>Gruppe</th>
                            <th colspan="2" >Spiel</th>
                            <th>Ergebnis</th>
                        </tr>
                </thead>
                <tbody>
                    {{#each gameslist}}
                        <tr class={{#streq this.status 'active'}} "bg-info"{{/streq}}    {{#streq this.gamePhase 'Group_Stage'}}  {{else}}"bg-light"{{/streq}} >
                            <td>{{this.number}}</td>
                            <td>{{formatTime this.time}}</td>
                            {{#streq this.group.[0] this.group.[1]}}
                                <td>{{this.group.[0]}}</td>
                            {{else}}
                                <td>{{this.group.[0]}} - {{this.group.[1]}}</td>
                            {{/streq}}
                            <td>{{this.opponents.[0]}}</td>
                            <td>{{this.opponents.[1]}}</td>
                            <td>{{this.goals.[0]}}:{{this.goals.[1]}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </section>
    </div>

    <div class="container-fluid">
        <div class="alert alert-danger text-center mt-3 {{#unless infoBannerMessage}}d-none{{/unless}}">
            <marquee behavior="scroll" direction="left" style="font-size: 20px;">{{infoBannerMessage}}</marquee>
        </div>

        <div id="connectionIndicator" class="text-center mt-3">
            <span id="connectionStatusText" class="text-success">Verbunden</span>
        </div>
    </div>

    <!-- Carousel Section -->
    <div id="carouselSlidesOnly" class="carousel slide page-divider" data-bs-ride="carousel">
        <div class="carousel-inner carousel-dynamic-height" id="carouselImages">
            {{#each carouselImages}}
                <div class="carousel-item {{#if @first}}active{{/if}}" data-bs-interval="5000">
                    <img class="d-block w-100 h-100 object-fit-contain carousel-image" src="/images/carousel/{{this}}" alt="{{this}}">
                </div>
            {{/each}}
        </div>
        <!-- Navigation buttons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselSlidesOnly" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselSlidesOnly" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <style>
        .carousel-image {
            object-fit: contain;
            width: 100%;
            height: 98%;
        }
        .carousel-item {
            width: 100%;
            height: 100%;
            object-fit: contain
        }
        .carousel-dynamic-height {
            height: auto;
        }
        @media (min-width: 992px) { /* Large devices (desktops, 992px and up) */
            .carousel-dynamic-height {
                height: 300px;
            }
        }
        @media (min-width: 768px) { /* Medium devices (tablets, 768px and up) */
            .carousel-dynamic-height {
                height: 400px;
            }
        }
        @media (max-width: 767px) { /* Small devices (landscape phones, 576px and up) */
            .carousel-dynamic-height {
                height: 200px;
            }
        }
    </style>
</body>